<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow with Blur -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#085937"
                android:endColor="#031f13"
                android:angle="90"
                android:gradientRadius="15dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Background with Green Color -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A6E44" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>
