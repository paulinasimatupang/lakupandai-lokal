<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A6E44"
    tools:context=".ui.MenuActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="326dp"
        android:layout_height="261dp"
        android:layout_margin="50dp"
        android:background="#0B623E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="283dp">

        <!-- Content inside Card 1 -->

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="326dp"
        android:layout_height="261dp"
        android:layout_margin="50dp"
        android:background="#0B623E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="283dp">

        <!-- Content inside Card 2 -->

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/card_yellow"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="636dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/card_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bg_dialog"
        app:layout_constraintTop_toBottomOf="@id/card_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/card_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/card_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView List Menu -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="24dp"
        android:foregroundGravity="center_horizontal"
        android:padding="24dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/card_white"
        app:layout_constraintBottom_toTopOf="@id/card_navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_white"

        app:spanCount="4"
        tools:itemCount="8"
        tools:listitem="@layout/recycler_view_menu_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
